{
  "name": "halftone-studio",
  "version": "1.0.0",
  "description": "Halftone Studio â€” Convert images into rhinestone / halftone dot patterns",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "frontend:install": "cd frontend && npm install",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "electron:dev": "concurrently \"npm run frontend:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run frontend:build && electron-builder",
    "pack:win": "npm run frontend:build && electron-builder --win",
    "pack:mac": "npm run frontend:build && electron-builder --mac",
    "pack:linux": "npm run frontend:build && electron-builder --linux",
    "postinstall": "npm run frontend:install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.4.0",
    "electron-builder": "^26.8.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.halftone.studio",
    "productName": "Halftone Studio",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*.py",
          "requirements-desktop.txt",
          "!__pycache__/**",
          "!*.pyc",
          "!main.py",
          "!Dockerfile",
          "!.dockerignore"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Halftone Studio"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "public.app-category.graphics-design",
      "identity": null,
      "forceCodeSigning": false,
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "Halftone Studio",
      "writeUpdateInfo": false,
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "Graphics"
    }
  }
}
